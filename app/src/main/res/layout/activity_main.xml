<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- STEP 6.1: GLSurfaceView (fills most of screen, for rendering) -->
    <android.opengl.GLSurfaceView
        android:id="@+id/glSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- STEP 6.1: Status information panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1E1E1E"
        android:padding="16dp">

        <!-- STEP 6.1: TextView labels showing real-time stats -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”„ Initializing Edge Detection Viewer..."
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="16dp" />

        <!-- STEP 6.1: Button at bottom: "Toggle Edge Detection" -->
        <Button
            android:id="@+id/toggleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disable Edge Detection"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            android:textStyle="bold"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>
